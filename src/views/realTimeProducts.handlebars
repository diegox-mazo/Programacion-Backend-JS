<div>
    <div class="d-flex justify-content-center">
        <form action="/api/products/" method="post">
            <div class="mb-3">
                <div>
                    <label for="title" class="form-label">title</label>
                    <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="title">
                </div>
                <div>
                    <label for="title" class="form-label">description</label>
                    <input type="text" class="form-control" id="description" aria-describedby="emailHelp" name="description">
                </div>
                <div>
                    <label for="title" class="form-label">code</label>
                    <input type="text" class="form-control" id="code" aria-describedby="emailHelp" name="code">
                </div>
                <div>
                    <label for="title" class="form-label">category</label>
                    <input type="text" class="form-control" id="category" aria-describedby="emailHelp" name="category">
                </div>
                <div>
                    <label for="title" class="form-label">stock</label>
                    <input type="text" class="form-control" id="stock" aria-describedby="emailHelp" name="stock">
                </div>
                <div>
                    <label for="title" class="form-label">price</label>
                    <input type="text" class="form-control" id="price" aria-describedby="emailHelp" name="price">
                </div>               
                
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div class="d-flex align-content-center flex-wrap mt-5 border border-primary">
        {{#each products}}
            <div class="card" style="width: 18rem;">
                {{!-- <img src="..." class="card-img-top" alt="..."> --}}
                <div class="card-body">
                    <h3 class="card-text">{{this.title}}</h3>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text">Code: {{this.code}}</p>
                    <p class="card-text">Category: {{this.category}}</p>
                    <p class="card-text">Stock: {{this.stock}}</p>
                    <p class="card-text">Price: ${{this.price}}</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script> src="/socket.io/socket.io.js"</script>
<script> src="/js/index.js"</script>